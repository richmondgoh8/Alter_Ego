<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameScene">

    <TextView
        android:id="@+id/healthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/heartImage"
        android:layout_marginStart="60dp"
        android:layout_marginTop="121dp"
        android:text="@string/healthText" />

    <TextView
        android:id="@+id/hungerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_alignStart="@+id/hungerImage"
        android:layout_marginStart="60dp"
        android:text="@string/hungerText" />

    <TextView
        android:id="@+id/currencyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/coinImage"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="Currency" />

    <TextView
        android:id="@+id/strengthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/heartImage"
        android:layout_alignEnd="@+id/imageView"
        android:text="Strength" />

    <TextView
        android:id="@+id/happinessText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/hungerText"
        android:layout_marginEnd="31dp"
        android:text="Happiness" />

    <TextView
        android:id="@+id/daysText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/happinessText"
        android:layout_alignTop="@+id/currencyText"
        android:text="Days Passed" />

    <ImageView
        android:id="@+id/heartImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/coinImage"
        android:layout_below="@+id/hungerImage"
        android:adjustViewBounds="false"
        android:contentDescription="@string/app_name"
        android:padding="5dp"
        app:srcCompat="@drawable/ui_heart" />

    <ImageView
        android:id="@+id/dayImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/happinessImage"
        android:adjustViewBounds="false"
        android:padding="5dp"
        app:srcCompat="@drawable/ui_star" />

    <ImageView
        android:id="@+id/happinessImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="113dp"
        android:layout_marginTop="61dp"
        android:adjustViewBounds="false"
        android:padding="5dp"
        app:srcCompat="@drawable/ui_plus" />

    <ImageView
        android:id="@+id/strengthImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/dayImage"
        android:layout_below="@+id/happinessImage"
        android:adjustViewBounds="false"
        android:padding="5dp"
        app:srcCompat="@drawable/ui_bolt2" />

    <ImageView
        android:id="@+id/hungerImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/coinImage"
        android:layout_below="@+id/coinImage"
        android:adjustViewBounds="false"
        android:padding="5dp"
        app:srcCompat="@drawable/ui_food" />

    <ImageView
        android:id="@+id/coinImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:adjustViewBounds="false"
        android:padding="5dp"
        app:srcCompat="@drawable/ui_coin" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="285dp"
        android:layout_height="339dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/feedBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Feed"
            android:onClick="feed"/>

        <Button
            android:id="@+id/trainBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Train"
            android:onClick="train"/>

        <Button
            android:id="@+id/careBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Care"
            android:onClick="care"/>
    </LinearLayout>

</RelativeLayout>